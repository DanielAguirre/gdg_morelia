rojo-google = #e51c23
azul-google = #3f51b5
body
	background #fff
	font-family 'Helvetica', sans-serif

	div#contenedor
		padding 0 2.5% 		
		width 95%
		div.buscar
			width 100%						
			a
				color grey
				font-size 20px
				font-weight bold
				position absolute
				right 5%
				text-decoration none
			div#buscar
				display inline-block
				height 36px
				background azul-google
				input
					background azul-google
					height 100%
					color white
					font-size 18px
					padding 0 2.5%
					border 0
					&::-webkit-input-placeholder
						color white
					&::-moz-placeholder
						color white
					&:-ms-input-placeholder
						color white
						
						
					 	
		div#contenido
			text-align center
			h2#descripcion
				width 60%
				margin-left 20%
				padding-bottom 5px
				font-size 27px
				letter-spacing 0.13pt
				font-weight 100
				border-bottom 6px solid rojo-google
	div#publicaciones
		width 100%
		div.post
			display inline-block
			vertical-align top
			width 29%
			text-align center
			margin-left 3.2%
			border-bottom 3px solid rojo-google
			img
				width 100%
				height 225px
			a
				h2.titulo
					color rojo-google
			h3.categoria
			p
				color grey
			a
				color rojo-google
				text-decoration none